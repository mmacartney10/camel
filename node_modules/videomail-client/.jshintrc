{
    // Example: https://github.com/jshint/jshint/blob/master/examples/.jshintrc
    // Documentation: http://www.jshint.com/docs/

    "maxerr"        : 50,       // {int} Maximum error before stopping

    // Enforcing
    "indent"        : 4,        // {int} Number of spaces to use for indentation
    "latedef"       : true,     // true: Require variables/functions to be defined before being used
    "newcap"        : false,    // true: Require capitalization of all constructor functions e.g. `new F()`
    "strict"        : false,    // Require `use strict` pragma in every file.
    "quotmark"      : false,    // Quotation mark consistency
    "undef"         : true,     // This option prohibits the use of explicitly undeclared variables
    "unused"        : true,     // This option warns when you define and never use your variables.

    // Inspired by http://elijahmanor.github.io/talks/js-smells/
    // "maxstatements" : 10,       // Max number of statements allowed per function
    // "maxdepth"      : 3,        // Control nesting of blocks
    // "maxcomplexity" : 5,        // Control cyclomatic complexity throughout code

    // Relaxing
    "shadow"        : true,     // true: Allows re-define variables later in code e.g. `var x=1; x=2;`
    "supernew"      : true,     // true: Tolerate `new function () { ... };` and `new Object;`
    "expr"          : true,     // true: Tolerate `ExpressionStatement` as Programs
    "loopfunc"      : true,     // true: Tolerate functions being defined in loops
    "validthis"     : true,     // true: Tolerate using this in a non-constructor function
    "asi"           : true,     // true: This option suppresses warnings about missing semicolons

    // Environments
    "browser"       : true,     // Web Browser (window, document, etc)
    "devel"         : true,     // Development/debugging (alert, confirm, etc)
    "node"          : true,     // Node.js
    "esnext"        : true,     // enable es6
    "-W003"         : true,     // 'x' was used before it was defined
    "-W008"         : true,     // A leading decimal point can be confused with a dot
    "-W044"         : true,     // Bad escaping
    "-W079"         : true,     // Allow redefinitions
    "-W084"         : true,     // Allow Unexpected assignment expression

    // Custom globals
    "predef": [
        "layOutDay",
        "suite",
        "test",
        "expect",
        "debugger",
        "Videomail",
        "AudioContext",
        "Promise",
        "ActiveXObject",
        "CalendarLayout",
        "CalendarEvent"
    ]
}
